BoxLayout:
    orientation:"vertical"
    BoxLayout:
        TextInput:
            id: input_miles
            text: '34'
            font_size:42
            halign:'left'
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation:"vertical"
            size_hint_x: 0.2
            Button:
                text: "Up"
                on_press:app.handle_increment(input_miles.text, 1)
            Button:
                text: "Down"
                on_press:app.handle_increment(input_miles.text, -1)
#    Button:
#        id: convert_button
#        text: "Convert m to km"
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        text: app.output_km
        color: (1, 1, 0, 1)